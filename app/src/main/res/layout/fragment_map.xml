<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--COMPASS-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

            <ImageView
                android:id="@+id/img_compass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/compass"
                android:src="@drawable/ic_compass_200dp" />

            <TextView
                android:id="@+id/txt_bearing1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/img_compass"
                android:layout_alignTop="@id/img_compass"
                android:layout_alignEnd="@id/img_compass"
                android:layout_alignBottom="@id/img_compass"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/h3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_bearing2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_compass"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/h3"
                android:textStyle="bold" />
        </RelativeLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <!--SPEEDOMETER-->
        <TextView
            android:id="@+id/txt_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/speedsign"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/h3"
            android:textStyle="bold" />
    </LinearLayout>


    <!--    <SeekBar-->
    <!--        android:id="@+id/slider_zoom"-->
    <!--        android:layout_width="300dp"-->
    <!--        android:layout_height="300dp"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:layout_alignParentEnd="true"-->
    <!--        android:thumb="@drawable/ic_zoom_48dp"-->
    <!--        android:layout_marginBottom="30dp"-->
    <!--        android:layout_marginEnd="-120dp"-->
    <!--        android:rotation="270" />-->
    <TextView
        android:id="@+id/txt_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h3" />

</RelativeLayout>
