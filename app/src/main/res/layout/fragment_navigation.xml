<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavigationFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/saved_destinations"
            android:layout_weight="1"
            android:text="Saved"
            android:src="@drawable/ic_baseline_location_on_24"/>

        <ImageView
            android:id="@+id/search_destination"
            android:layout_weight="1"
            android:text="Search"
            android:src="@drawable/ic_baseline_search_24"/>

        <ImageView
            android:id="@+id/route_to_destination"
            android:layout_weight="1"
            android:text="Go"
            android:src="@drawable/ic_baseline_navigation_24"/>
    </TableRow>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchbox"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listview_locations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/draw_rounded_corners" />

</LinearLayout>