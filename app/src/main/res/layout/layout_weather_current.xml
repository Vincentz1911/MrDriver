<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <ImageView
                android:layout_width="@dimen/huge_icon"
                android:layout_height="@dimen/huge_icon"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/minmax_temp"
                android:scaleType="fitCenter"
                android:src="@drawable/wic_tempminmax_64dp" />

            <TextView
                android:id="@+id/txt_low_high_temp"
                android:layout_gravity="center|end"
                android:layout_weight="4"
                android:gravity="end"
                android:textSize="@dimen/h3" />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="@dimen/huge_icon"
                android:layout_height="@dimen/huge_icon"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/wind"
                android:scaleType="fitCenter"
                android:src="@drawable/wic_windflag_64dp" />

            <TextView
                android:id="@+id/txt_wind"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="end"
                android:textSize="@dimen/h3" />

        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="@dimen/huge_icon"
                android:layout_height="@dimen/huge_icon"
                android:layout_weight="1"
                android:contentDescription="@string/sunrise_sunset"
                android:scaleType="fitCenter"
                android:src="@drawable/wic_sunrise_dawn_64dp" />

            <TextView
                android:id="@+id/txt_sunrise_sunset"
                android:layout_gravity="center|end"
                android:layout_weight="4"
                android:gravity="end"
                android:textSize="@dimen/h3" />

        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="@dimen/huge_icon"
                android:layout_height="@dimen/huge_icon"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/press_humid"
                android:scaleType="fitCenter"
                android:src="@drawable/wic_humiditypressure_64dp" />

            <TextView
                android:id="@+id/txt_pressure_humidity"
                android:layout_gravity="center|end"
                android:layout_weight="4"
                android:gravity="end"
                android:textSize="@dimen/h3" />

        </TableRow>
    </TableLayout>
</ScrollView>