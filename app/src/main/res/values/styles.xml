<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme_Day" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDay</item>
        <item name="colorAccent">@color/colorAccentDay</item>
        <item name="colorFadedDark">@color/colorFadedDarkDay</item>
        <item name="colorFaded">@color/colorFadedDay</item>
        <item name="android:textColor">@color/colorTextDay</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="AppTheme_Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="colorFadedDark">@color/colorFadedDarkBlue</item>
        <item name="colorFaded">@color/colorFadedBlue</item>
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#AAA</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="AppTheme_Air" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Air</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Air</item>
        <item name="colorAccent">@color/colorAccent_Air</item>
        <item name="colorFadedDark">@color/colorFadedDark_Air</item>
        <item name="colorFaded">@color/colorFaded_Air</item>
        <item name="android:textColor">@color/colorText_Air</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#AAA</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="AppTheme_Night" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="colorFadedDark">@color/colorFadedDarkNight</item>
        <item name="colorFaded">@color/colorFadedNight</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textColorPrimary">?colorAccent</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="background">@drawable/draw_rounded_corners</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="ShadowText" parent="android:TextAppearance">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorAccentDay</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


</resources>
