<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="obd2tag"
    tools:context=".OBD2Fragment">

    <Button
        android:id="@+id/btn_startbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start BT"
        android:textSize="@dimen/h3"/>

    <Button
        android:id="@+id/btn_startupdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start updates"
        android:textSize="@dimen/h3"/>

    <TextView
        android:id="@+id/txt_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SPEED"
        android:textSize="@dimen/h3" />

    <TextView
        android:id="@+id/txt_rpm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RPM"
        android:textSize="@dimen/h3" />

    <TextView
        android:id="@+id/txt_oiltemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OilTemp"
        android:textSize="@dimen/h3" />

    <TextView
        android:id="@+id/txt_fuellevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_consumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
</LinearLayout>